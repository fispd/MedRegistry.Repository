<Page x:Class="MedRegistryApp.wpf.Pages.Auth.RegisterLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedRegistryApp.wpf.Pages.Auth"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1150"
      Title="Регистрация — Шаг 2"
      Background="#F0F2F5">

    <Grid>
        <Border Background="White" CornerRadius="15" Padding="30"
                Width="400" Height="450"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.15" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Margin="0 0 0 25">
                    <TextBlock Text="Учётная запись" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Шаг 2 из 2 — Данные для входа" 
                               FontSize="12" 
                               Foreground="#7F8C8D"
                               Margin="0 5 0 0"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Поля ввода -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <!-- Логин -->
                    <TextBlock Text="Логин *" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0 0 0 5"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0 0 0 15">
                        <TextBox x:Name="UsernameBox" Height="42" BorderThickness="0" Background="Transparent" Padding="12 10" FontSize="14" VerticalContentAlignment="Center"/>
                    </Border>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль *" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0 0 0 5"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0 0 0 15">
                        <PasswordBox x:Name="PasswordBox" Height="42" BorderThickness="0" Background="Transparent" Padding="12 10" FontSize="14" VerticalContentAlignment="Center"/>
                    </Border>

                    <!-- Подтверждение пароля -->
                    <TextBlock Text="Повторите пароль *" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0 0 0 5"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                        <PasswordBox x:Name="ConfirmBox" Height="42" BorderThickness="0" Background="Transparent" Padding="12 10" FontSize="14" VerticalContentAlignment="Center"/>
                    </Border>

                    <!-- Подсказка -->
                    <TextBlock Text="Пароль должен содержать минимум 6 символов" 
                               FontSize="11" 
                               Foreground="#95A5A6"
                               Margin="0 10 0 0"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                    <Button Content="← Назад" 
                            Width="150" 
                            Height="42"
                            Margin="0 0 10 0"
                            Click="Back_Click" 
                            Style="{StaticResource MenuButtonStyle}"
                            FontSize="15"/>
                    <Button Content="Зарегистрироваться" 
                            Width="180" 
                            Height="42"
                            Click="Register_Click" 
                            Style="{StaticResource 2ButtonStyle}"
                            FontSize="15"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>


