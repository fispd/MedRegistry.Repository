<Page x:Class="MedRegistryApp.wpf.Pages.Auth.ForgotCredentialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedRegistryApp.wpf.Pages.Auth"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1150"
      Title="Восстановление доступа"
      Background="#F0F2F5">

    <Grid>
        <Border Background="White" CornerRadius="15" Padding="40" 
                Width="500"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.15" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Margin="0 0 0 25">
                    <TextBlock Text="Восстановление доступа" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Введите Email или телефон для поиска аккаунта" 
                               FontSize="13" 
                               Foreground="#7F8C8D"
                               Margin="0 8 0 0"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Поиск аккаунта -->
                <StackPanel Grid.Row="1" x:Name="SearchPanel">
                    <TextBlock Text="Email или телефон" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               Margin="0 0 0 5"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBox x:Name="SearchBox" 
                                 Height="42" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Padding="12 10"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"/>
                    </Border>

                    <Button Content="Найти аккаунт" 
                            Height="45" 
                            Margin="0 20 0 0" 
                            Click="Search_Click" 
                            Style="{StaticResource 2ButtonStyle}"
                            FontSize="15"/>
                </StackPanel>

                <!-- Панель изменения данных (скрыта по умолчанию) -->
                <StackPanel Grid.Row="1" x:Name="ChangePanel" Visibility="Collapsed">
                    <Border Background="#E8F6F3" CornerRadius="8" Padding="15" Margin="0 0 0 20">
                        <StackPanel>
                            <TextBlock Text="Аккаунт найден:" FontWeight="SemiBold" Foreground="#27AE60"/>
                            <TextBlock x:Name="FoundUserInfo" Foreground="#2C3E50" Margin="0 5 0 0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Что вы хотите изменить?" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               Margin="0 0 0 10"/>

                    <!-- Выбор: логин или пароль -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                        <RadioButton x:Name="ChangeLoginRadio" Content="Логин" GroupName="ChangeType" 
                                     IsChecked="True" Margin="0 0 20 0" FontSize="14"/>
                        <RadioButton x:Name="ChangePasswordRadio" Content="Пароль" GroupName="ChangeType" FontSize="14"/>
                    </StackPanel>

                    <!-- Новый логин -->
                    <StackPanel x:Name="NewLoginPanel">
                        <TextBlock Text="Новый логин" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0 0 0 5"/>
                        <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBox x:Name="NewLoginBox" Height="42" BorderThickness="0" Background="Transparent" 
                                     Padding="12 10" FontSize="14" VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Новый пароль -->
                    <StackPanel x:Name="NewPasswordPanel" Visibility="Collapsed">
                        <TextBlock Text="Новый пароль" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0 0 0 5"/>
                        <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0 0 0 15">
                            <PasswordBox x:Name="NewPasswordBox" Height="42" BorderThickness="0" Background="Transparent" 
                                         Padding="12 10" FontSize="14" VerticalContentAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Подтвердите пароль" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0 0 0 5"/>
                        <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                            <PasswordBox x:Name="ConfirmPasswordBox" Height="42" BorderThickness="0" Background="Transparent" 
                                         Padding="12 10" FontSize="14" VerticalContentAlignment="Center"/>
                        </Border>
                        
                        <TextBlock Text="Пароль должен содержать минимум 6 символов" 
                                   FontSize="11" Foreground="#95A5A6" Margin="0 8 0 0"/>
                    </StackPanel>

                    <Button Content="Сохранить изменения" 
                            Height="45" 
                            Margin="0 20 0 0" 
                            Click="Save_Click" 
                            Style="{StaticResource 2ButtonStyle}"
                            FontSize="15"/>

                    <Button Content="Искать другой аккаунт" 
                            Height="40" 
                            Margin="0 10 0 0" 
                            Click="SearchAgain_Click" 
                            Style="{StaticResource MenuButtonStyle}"
                            FontSize="14"/>
                </StackPanel>

                <!-- Кнопка назад -->
                <Button Grid.Row="2" 
                        Content="← Вернуться к входу" 
                        Height="45" 
                        Margin="0 20 0 0"
                        Click="Back_Click" 
                        Style="{StaticResource MenuButtonStyle}"
                        FontSize="15"/>
            </Grid>
        </Border>
    </Grid>
</Page>


