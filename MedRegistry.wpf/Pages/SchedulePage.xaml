<Page x:Class="MedRegistryApp.wpf.Pages.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedRegistryApp.wpf.Pages"
      mc:Ignorable="d"
      Background="#F0F2F5">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Расписание врачей" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#0B7FC7" 
                       Margin="0,0,0,15"/>
            
            <!-- Панель кнопок управления -->
            <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" Margin="0,0,0,15">
                <Button x:Name="AddScheduleButton"
                        Content="➕ Добавить график" Height="40" Width="180" Margin="0,0,10,0"
                        Background="#0B7FC7" Foreground="White" Click="AddNewSchedule_Click"
                        FontWeight="SemiBold"
                        Style="{StaticResource 2ButtonStyle}"/>
                
                <Button x:Name="DownloadTemplateButton"
                        Content="📥 Скачать шаблон" Height="40" Width="160" Margin="0,0,10,0"
                        Background="#28A745" Foreground="White" Click="DownloadTemplate_Click"
                        FontWeight="SemiBold"
                        Style="{StaticResource 2ButtonStyle}"/>
                
                <Button x:Name="UploadDocumentButton"
                        Content="📤 Загрузить документ" Height="40" Width="180" Margin="0,0,10,0"
                        Background="#FFC107" Foreground="Black" Click="UploadDocument_Click"
                        FontWeight="SemiBold"
                        Style="{StaticResource 2ButtonStyle}"/>
                
                <Button x:Name="CleanupOldSchedulesButton"
                        Content="🗑️ Удалить старое расписание" Height="40" Width="220" Margin="0,0,0,0"
                        Background="#E74C3C" Foreground="White" Click="CleanupOldSchedules_Click"
                        FontWeight="SemiBold"
                        Style="{StaticResource 2ButtonStyle}"/>
            </StackPanel>

            <!-- Выпадающий фильтр -->
            <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15"
                    BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand"
                    MouseLeftButtonDown="ToggleFilter_Click" x:Name="ToggleFilterButton">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" Opacity="0.15" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="FilterToggleIcon" Text="▼" FontSize="14" Foreground="#0B7FC7" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="FilterToggleText" Text="Показать фильтры" FontSize="15" FontWeight="SemiBold" Foreground="#0B7FC7"/>
                </StackPanel>
            </Border>

            <!-- Панель фильтров (скрыта по умолчанию) -->
            <Border x:Name="FilterPanel" Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,20"
                    BorderBrush="#E0E0E0" BorderThickness="1" Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="3" Opacity="0.2" BlurRadius="5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="🔍 Фильтры" 
                               FontSize="16" FontWeight="Bold" 
                               Foreground="#0B7FC7" 
                               Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Фильтр по врачу -->
                        <StackPanel x:Name="DoctorFilterPanel" Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Врач:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                            <ComboBox x:Name="DoctorFilter"
                                      Height="32"
                                      SelectionChanged="DoctorFilter_SelectionChanged"/>
                        </StackPanel>

                        <!-- Фильтр по дате с -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Дата с:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                            <DatePicker x:Name="DateFromFilter"
                                        Height="32"
                                        SelectedDateChanged="DateFilter_Changed"/>
                        </StackPanel>

                        <!-- Фильтр по дате по -->
                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Text="Дата по:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                            <DatePicker x:Name="DateToFilter"
                                        Height="32"
                                        SelectedDateChanged="DateFilter_Changed"/>
                        </StackPanel>

                        <!-- Кнопка сброса -->
                        <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                            <Button Content="🔄 Сброс"
                                    Width="120"
                                    Height="32"
                                    Click="ResetFilters_Click"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource 2ButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Счётчик -->
            <TextBlock x:Name="ScheduleCountText" 
                       Text="Найдено записей: 0" 
                       FontSize="13" 
                       Foreground="#7F8C8D" 
                       Margin="0,0,0,10"/>

            <!-- Карточки расписания -->
            <WrapPanel x:Name="ScheduleWrapPanel"/>
        </StackPanel>
    </ScrollViewer>
</Page>
