<Page x:Class="MedRegistry.wpf.Pages.NewMedicalRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedRegistry.wpf.Pages"
      mc:Ignorable="d" 
      Background="#F0F2F5"
      Title="Создать новый отчёт">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="📋 Медицинский отчёт" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#0B7FC7" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Заполните данные о приёме пациента" 
                           FontSize="14" 
                           Foreground="#7F8C8D" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" MaxWidth="700" HorizontalAlignment="Center">
                
                <!-- Информация о пациенте -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="👤 Информация о пациенте" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#27AE60" 
                                   Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Пациент:" Grid.Row="0" Grid.Column="0" 
                                       FontWeight="SemiBold" Foreground="#555" Margin="0,3,15,3"/>
                            <TextBlock x:Name="PatientNameText" Grid.Row="0" Grid.Column="1" 
                                       Foreground="#222" FontWeight="SemiBold" Margin="0,3"/>
                            
                            <TextBlock Text="Дата приёма:" Grid.Row="1" Grid.Column="0" 
                                       FontWeight="SemiBold" Foreground="#555" Margin="0,3,15,3"/>
                            <TextBlock x:Name="AppointmentDateText" Grid.Row="1" Grid.Column="1" 
                                       Foreground="#222" FontWeight="SemiBold" Margin="0,3"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Форма отчёта -->
                <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="🩺 Данные осмотра" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#0B7FC7" 
                                   Margin="0,0,0,15"/>

                        <!-- Диагноз -->
                        <TextBlock Text="Диагноз *" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                        <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                            <TextBox x:Name="DiagnosisBox" 
                                     Height="40" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="12 10"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     TextWrapping="Wrap"/>
                        </Border>

                        <!-- Лечение -->
                        <TextBlock Text="Назначенное лечение *" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                        <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                            <TextBox x:Name="TreatmentBox" 
                                     Height="100" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="12 10"
                                     FontSize="14"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Border>

                        <!-- Примечания -->
                        <TextBlock Text="Дополнительные примечания" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                        <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBox x:Name="NotesBox" 
                                     Height="80" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="12 10"
                                     FontSize="14"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Border>

                        <!-- Кнопки -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                            <Button Content="← Отмена" 
                                    Width="140" Height="42" 
                                    Margin="0,0,15,0"
                                    Click="Cancel_Click"
                                    Style="{StaticResource MenuButtonStyle}"
                                    FontSize="14"/>
                            <Button Content="💾 Сохранить отчёт" 
                                    Width="160" Height="42"
                                    Click="Save_Click"
                                    Style="{StaticResource 2ButtonStyle}"
                                    FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
