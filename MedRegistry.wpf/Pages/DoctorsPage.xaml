<Page x:Class="MedRegistryApp.wpf.Pages.DoctorsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedRegistryApp.wpf.Pages"
      mc:Ignorable="d"
      Background="#F0F2F5">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Врачи клиники" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#0B7FC7" 
                       Margin="0,0,0,15"/>

            <!-- Кнопка добавления -->
            <Button x:Name="AddDoctorButton"
                    Content="➕ Добавить врача"
                    Width="180"
                    Height="40"
                    Foreground="White"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,15"
                    Click="AddDoctor_Click"
                    Style="{StaticResource 2ButtonStyle}"/>

            <!-- Выпадающий фильтр -->
            <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15"
                    BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand"
                    MouseLeftButtonDown="ToggleFilter_Click" x:Name="ToggleFilterButton">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" Opacity="0.15" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="FilterToggleIcon" Text="▼" FontSize="14" Foreground="#0B7FC7" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="FilterToggleText" Text="Показать фильтры" FontSize="15" FontWeight="SemiBold" Foreground="#0B7FC7"/>
                </StackPanel>
            </Border>

            <!-- Панель фильтров (скрыта по умолчанию) -->
            <Border x:Name="FilterPanel" Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,20"
                    BorderBrush="#E0E0E0" BorderThickness="1" Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="3" Opacity="0.2" BlurRadius="5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="🔍 Фильтры" 
                               FontSize="16" FontWeight="Bold" 
                               Foreground="#0B7FC7" 
                               Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Поиск по имени -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Поиск по имени:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                            <TextBox x:Name="SearchBox"
                                     Height="32"
                                     VerticalContentAlignment="Center"
                                     Padding="8,0"
                                     TextChanged="SearchBox_TextChanged"/>
                        </StackPanel>

                        <!-- Фильтр по специализации -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Специализация:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                            <ComboBox x:Name="SpecializationFilter"
                                      Height="32"
                                      SelectionChanged="SpecializationFilter_SelectionChanged"/>
                        </StackPanel>

                        <!-- Кнопка сброса -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                            <Button Content="🔄 Сброс"
                                    Width="120"
                                    Height="32"
                                    Click="ResetFilters_Click"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource 2ButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Счётчик -->
            <TextBlock x:Name="DoctorsCountText" 
                       Text="Найдено врачей: 0" 
                       FontSize="13" 
                       Foreground="#7F8C8D" 
                       Margin="0,0,0,10"/>

            <!-- Карточки врачей -->
            <WrapPanel x:Name="DoctorsWrapPanel"/>
        </StackPanel>
    </ScrollViewer>
</Page>
