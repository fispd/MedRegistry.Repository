<Window x:Class="MedRegistryApp.wpf.Windows.RegisterLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedRegistryApp.wpf.Windows"
        mc:Ignorable="d"
        Title="Регистрация — Шаг 2" Height="320" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Учётная запись"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Логин" HorizontalAlignment="Center" />
            <TextBox x:Name="UsernameBox" Margin="0,5"/>

            <TextBlock Text="Пароль" HorizontalAlignment="Center" />
            <PasswordBox x:Name="PasswordBox" Margin="0,5" />

            <TextBlock Text="Повторите пароль" HorizontalAlignment="Center" />
            <PasswordBox x:Name="ConfirmBox" Margin="0,5" Width="300" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Center" Grid.Row="2">
            <Button Content="Назад" Width="120" Click="Back_Click" Style="{StaticResource MenuButtonStyle}"/>
            <Button Content="Регистрация" Width="120" Click="Register_Click" Style="{StaticResource MenuButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
