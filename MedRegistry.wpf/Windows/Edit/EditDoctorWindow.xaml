<Window x:Class="MedRegistryApp.wpf.Windows.Edit.EditDoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedRegistryApp.wpf.Windows.Edit"
        mc:Ignorable="d"
        Title="Редактирование врача"
        Height="550" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="15" Padding="25">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="315" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel>
                <!-- Заголовок -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="👨‍⚕️" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Редактирование врача" FontSize="20" FontWeight="Bold" Foreground="#0B7FC7" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Имя -->
                <TextBlock Text="Имя" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="FirstNameBox" Height="35" Padding="10,0" FontSize="13" VerticalContentAlignment="Center"/>

                <!-- Фамилия -->
                <TextBlock Text="Фамилия" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,15,0,5"/>
                <TextBox x:Name="LastNameBox" Height="35" Padding="10,0" FontSize="13" VerticalContentAlignment="Center"/>

                <!-- Специализация -->
                <TextBlock Text="Специализация" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,15,0,5"/>
                <ComboBox x:Name="SpecializationBox" Height="35" Padding="10,0" FontSize="13"/>

                <!-- Опыт -->
                <TextBlock Text="Опыт работы (лет)" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,15,0,5"/>
                <TextBox x:Name="ExperienceBox" Height="35" Padding="10,0" FontSize="13" VerticalContentAlignment="Center"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button Content="💾 Сохранить"
                            Width="130" Height="40"
                            Background="#27AE60" Foreground="White"
                            Margin="0,0,10,0" FontSize="13" FontWeight="SemiBold"
                            Click="Save_Click"
                            Style="{StaticResource 2ButtonStyle}" Cursor="Hand"/>

                    <Button Content="Отмена"
                            Width="100" Height="40"
                            FontSize="13" FontWeight="SemiBold"
                            Click="Cancel_Click"
                            Style="{StaticResource DeleteButtonStyle}" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
