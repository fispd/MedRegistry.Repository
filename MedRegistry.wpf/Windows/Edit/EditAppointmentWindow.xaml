<Window x:Class="MedRegistryApp.wpf.Windows.Edit.EditAppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedRegistryApp.wpf.Windows.Edit"
        mc:Ignorable="d"
        Title="Редактировать запись" Width="420" Height="580" 
        WindowStartupLocation="CenterScreen" Background="#F0F2F5" ResizeMode="NoResize">
    <Grid Margin="20">
        <Border Background="White" CornerRadius="15" Padding="25">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="315" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel>
                <!-- Заголовок -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="✏️" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Редактировать запись" FontSize="20" FontWeight="Bold" Foreground="#0B7FC7" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Пациент -->
                <TextBlock Text="Пациент" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,0,0,5"/>
                <ComboBox x:Name="PatientComboBox" Height="35" Padding="10,0" FontSize="13"/>

                <!-- Врач -->
                <TextBlock Text="Врач" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,15,0,5"/>
                <ComboBox x:Name="DoctorComboBox" Height="35" Padding="10,0" FontSize="13"/>

                <!-- Дата -->
                <TextBlock Text="Дата приёма" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,15,0,5"/>
                <DatePicker x:Name="StartDatePicker" Height="35" FontSize="13"/>
                
                <!-- Время -->
                <TextBlock Text="Время (чч:мм)" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,15,0,5"/>
                <TextBox x:Name="StartTimeBox" Height="35" Padding="10,0" FontSize="13" VerticalContentAlignment="Center"/>

                <!-- Цель приёма -->
                <TextBlock Text="Цель приёма" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,15,0,5"/>
                <TextBox x:Name="PurposeBox" Height="35" Padding="10,0" FontSize="13" VerticalContentAlignment="Center"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" Margin="0,25,0,0" HorizontalAlignment="Center">
                    <Button Content="💾 Сохранить" Background="#27AE60" Foreground="White" 
                            Width="130" Height="40" Margin="0,0,10,0" FontSize="13" FontWeight="SemiBold"
                            Click="Save_Click" Style="{StaticResource 2ButtonStyle}" Cursor="Hand"/>
                    <Button Content="🗑️ Удалить" Background="#E74C3C" Foreground="White" 
                            Width="110" Height="40" FontSize="13" FontWeight="SemiBold"
                            Click="Delete_Click" Style="{StaticResource 2ButtonStyle}" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
