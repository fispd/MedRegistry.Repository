<Window x:Class="MedRegistryApp.wpf.Windows.Edit.EditCredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedRegistryApp.wpf.Windows.Edit"
        mc:Ignorable="d"
        Title="Редактировать данные для входа" Width="420" Height="500" 
        WindowStartupLocation="CenterScreen" Background="#F0F2F5" ResizeMode="NoResize">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="15" Padding="25">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="315" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel>
                <!-- Заголовок -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="🔐" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Данные для входа" FontSize="20" FontWeight="Bold" Foreground="#0B7FC7" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Логин -->
                <TextBlock Text="Логин" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameBox" Height="35" Padding="10,0" FontSize="13" VerticalContentAlignment="Center"/>

                <!-- Новый пароль -->
                <TextBlock Text="Новый пароль" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,15,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="35" Padding="10,0" FontSize="13" VerticalContentAlignment="Center"/>

                <!-- Подтверждение -->
                <TextBlock Text="Подтвердите пароль" FontWeight="SemiBold" FontSize="13" Foreground="#555" Margin="0,15,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Height="35" Padding="10,0" FontSize="13" VerticalContentAlignment="Center"/>

                <!-- Подсказка -->
                <TextBlock Text="💡 Оставьте поля пароля пустыми, если не хотите его менять" 
                           FontSize="11" Foreground="#7F8C8D" Margin="0,10,0,0" TextWrapping="Wrap"/>

                <!-- Кнопка -->
                <Button Content="💾 Сохранить изменения" Background="#27AE60" Foreground="White" 
                        Height="42" Margin="0,20,0,0" FontSize="14" FontWeight="SemiBold"
                        Click="Save_Click" Style="{StaticResource 2ButtonStyle}" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
