<Application x:Class="MedRegistryApp.wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MedRegistryApp.wpf"
             StartupUri="Windows\AuthWindow.xaml">
    <Application.Resources>
        <!-- Цвета -->
        <Color x:Key="PrimaryColorValue">#2C3E50</Color>
        <Color x:Key="AccentColorValue">#1ABC9C</Color>
        <Color x:Key="ButtonHoverColorValue">#0B7FC7</Color>
        <Color x:Key="BackgroundColorValue">#F0F2F5</Color>


        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0B7FC7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0B7FC7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>


